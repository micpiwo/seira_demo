{% extends 'layout.twig' %}

{% block body %}
    <h1 class="text-danger">Mise a jour du jeux</h1>
    <form method="post">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" required="" name="id" placeholder="Id du jeux">
        </div>

        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" required="" name="name" placeholder="Nom du jeux">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" required="" name="description" placeholder="Description du jeux"  rows="3"></textarea>
        </div>

        <div class="form-group">
            <label for="price">Prix</label>
            <input type="number" class="form-control" id="price" name="price" required="" placeholder="Prix du jeux">

        </div>

        <div class="form-group">
            <label for="photo">Photo</label>
            <input type="text" class="form-control" id="photo" name="photo" placeholder="Chemin de la photo de la console">

        </div>

        <div class="form-group">
            <label for="stock">En stock</label>
            <input type="text" class="form-control" id="avalable" name="avalable" placeholder="En stock OUI ou NON">

        </div>

        <div class="form-group">
            <label for="platform">Plateforme</label>
            <input type="text" class="form-control" id="platform" name="platform" placeholder="Nom de la console">

        </div>

        <button type="submit" class="btn btn-outline-primary">Mettre Ã  jour le jeu</button>
    </form>

{% endblock %}
